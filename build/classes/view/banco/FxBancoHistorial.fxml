                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <HBox VBox.vgrow="ALWAYS">
                           <children>
                              <TableView fx:id="tvList" prefHeight="300.0" styleClass="table-view-principal" HBox.hgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="tcNumero" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Nro." />
                                    <TableColumn fx:id="tcFecha" prefWidth="127.0" style="-fx-alignment: CENTER-LEFT;" text="Fecha" />
