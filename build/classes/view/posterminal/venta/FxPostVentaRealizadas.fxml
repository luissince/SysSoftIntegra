                                                      <Image url="@../../image/calendar.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Label>
                                          <DatePicker fx:id="dtFechaInicial" editable="false" onAction="#onActionFechaInicial" prefHeight="30.0" prefWidth="220.0" promptText="Ingrese su fecha" />
