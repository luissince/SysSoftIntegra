                                          <Label styleClass="labelOpenSansRegular13" text="Buscar por N° de Documento, Datos del Cliente o Serie/Numeración de Comprobante" textFill="#020203">
                                             <font>
                                                <Font name="Calibri" size="15.0" />
                                             </font>
                                             <graphic>
                                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../../image/search.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Label>
                                          <TextField fx:id="txtSearch" onKeyPressed="#onKeyPressedSearch" onKeyReleased="#onKeyRelasedSearch" prefHeight="30.0" promptText="Ingrese su cliente o serie y numeración" styleClass="text-field-normal" />
