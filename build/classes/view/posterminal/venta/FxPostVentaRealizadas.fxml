                                          <TableColumn fx:id="tcEstado" prefWidth="120.0" style="-fx-alignment: CENTER-LEFT;" text="Estado" />
                                          <TableColumn fx:id="tcTotal" prefWidth="120.0" style="-fx-alignment: CENTER-RIGHT;" text="Importe Total" />
